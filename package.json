{
  "name": "berlin",
  "version": "1.1.0",
  "description": "A multi-functional discord bot",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibveecnk/berlin"
  },
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "run-build": "node build/index.js",
    "dev": "nodemon"
  },
  "dependencies": {
    "@discordjs/opus": "^0.6.0",
    "@typeit/discord": "^4.0.9",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "ffmpeg-static": "^4.3.0",
    "node-fetch": "^2.6.1",
    "simple-youtube-api": "^5.2.1",
    "yt-search": "^2.8.0",
    "ytdl-core": "^4.5.0",
    "ytdl-core-discord": "^1.3.0"
  },
  "devDependencies": {
    "@tsconfig/node14": "1.0.0",
    "@types/node": "14.17.1",
    "@types/sharp": "0.28.2",
    "nodemon": "2.0.7",
    "ts-node": "10.0.0",
    "tsc": "2.0.3",
    "tslib": "2.2.0",
    "typescript": "4.3.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
